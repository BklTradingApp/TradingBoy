<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender for logging to the console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for logging to a file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>tradingboy.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>tradingboy.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Define a masking filter -->
        <turboFilter class="ch.qos.logback.classic.turbo.MatchingFilter">
            <Regex>.*"key":"[^"]+","secret":"[^"]+".*</Regex>
            <OnMatch>DENY</OnMatch>
            <OnMismatch>NEUTRAL</OnMismatch>
        </turboFilter>
    </appender>

    <!-- Root logger configuration at INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Logger for AlpacaWebSocketClient at INFO level to prevent DEBUG logs -->
    <logger name="com.tradingboy.alpaca.AlpacaWebSocketClient" level="INFO" />

    <!-- Additional loggers can be added here if needed -->
</configuration>
